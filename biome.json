{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noUselessTypeConstraint": "error",
        "useLiteralKeys": "error",
        "useOptionalChain": "error"
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "useExhaustiveDependencies": "warn"
      },
      "style": {
        "noCommonJs": "error",
        "noInferrableTypes": "error",
        "noNamespace": "error",
        "useArrayLiterals": "error",
        "useAsConstAssertion": "error",
        "useConsistentArrayType": "off",
        "useForOf": "error",
        "useShorthandFunctionType": "error",
        "useImportType": "error",
        "useComponentExportOnlyModules": {
          "level": "error",
          "options": {
            "allowConstantExport": true,
            "allowExportNames": [
              "metadata",
              "viewport",
              "generateMetadata",
              "generateViewport"
            ]
          }
        }
      },
      "suspicious": {
        "noRedeclare": "off",
        "noEmptyBlockStatements": "error",
        "noExplicitAny": "error",
        "noExtraNonNullAssertion": "error",
        "noMisleadingInstantiator": "error",
        "noUnsafeDeclarationMerging": "error",
        "useAdjacentOverloadSignatures": "error",
        "useAwait": "error",
        "useNamespaceKeyword": "error"
      },
      "nursery": {
        "noMisusedPromises": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  },
  "css": {
    "linter": {
      "enabled": false
    }
  },
  "overrides": [
    {
      "includes": ["*.css"],
      "css": {
        "linter": {
          "enabled": false
        }
      }
    },
    {
      "includes": ["tailwind.config.*"],
      "linter": {
        "rules": {
          "style": {
            "noCommonJs": "off"
          }
        }
      }
    },
    {
      "includes": ["*.ts", "*.tsx", "*.mts", "*.cts"],
      "javascript": {
        "formatter": {
          "quoteStyle": "double",
          "semicolons": "always",
          "trailingCommas": "all"
        }
      }
    }
  ],
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ":NODE:",
              ":BLANK_LINE:",
              [
                ":PACKAGE:",
                "!react",
                "!react/*",
                "!react-*",
                "!@types/react",
                "!@types/react-*"
              ],
              ":BLANK_LINE:",
              ["react", "react/*", "react-*", "@types/react", "@types/react-*"],
              ":BLANK_LINE:",
              ["~/*", "./", "../"],
              ":BLANK_LINE:",
              {
                "type": true
              }
            ]
          }
        }
      }
    }
  }
}
